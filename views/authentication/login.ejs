<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Login ~ screenie.host</title>
        <link rel="shortcut icon" href="assets/images/favicon.png" type="image/x-icon">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="assets/output.css">
    </head>
    <body>
        <div class="container mx-auto p-4">
            <%- include('../modules/navbar') %>
        </div>
        <div class="flex items-center justify-center min-h-screen">
            <div class="card w-full max-w-sm shadow-2xl bg-base-100 text-center">
              <div class="card-body">
                <div class="text-center">
                  <img src="../assets/images/logo.png" width="150px" class="mb-3 mx-auto">
                  <h1 class="text-3xl font-bold mb-2">Log in with your account</h1>
                </div>
                <form action="/login" method="POST">
                  <div class="form-control mb-3">
                    <label class="floating-label" for="username">
                      <span>Username</span>
                      <input type="text" id="username" name="username" placeholder="Username" class="input input-bordered" autocomplete="email" required />
                    </label>
                  </div>
                  <div class="form-control">
                    <label class="floating-label" for="password">
                      <span>Password</span>
                      <input type="password" id="password" name="password" placeholder="Password" class="input input-bordered" autocomplete="current-password" required />
                    </label>
                  </div>
                  <div class="form-control mt-6">
                    <button type="submit" class="btn btn-soft btn-primary text-base-content">Login</button>
                  </div>
                </form>
                <p class="text-center">
                  Doesn't have an account yet? <a href="/register" class="text-primary">Register</a>
              </p>
              </div>
            </div>
          </div>
        <div class="container mx-auto p-4">
            <%- include('../modules/footer') %>
        </div>
    </body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="../assets/script.js"></script>
    
</html>