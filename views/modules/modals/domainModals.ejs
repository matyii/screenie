<div id="domainDetailsModal" class="modal">
    <div class="modal-box">
        <h3 class="font-bold text-lg">Domain Details</h3>
        <form id="domainDetailsForm">
            <input type="hidden" id="domainId" name="domainId">
            <div class="form-control mb-4">
                <label class="label">
                    <span class="label-text">Domain Name</span>
                </label>
                <input type="text" id="domainName" name="domainName" class="input input-bordered">
            </div>
            <div class="modal-action">
                <button type="button" class="btn btn-primary" onclick="saveDomainDetails()">Save</button>
                <button type="button" class="btn" onclick="closeDomainModal()">Cancel</button>
            </div>
        </form>
    </div>
</div>

<div id="addDomainModal" class="modal">
    <div class="modal-box">
        <h3 class="font-bold text-lg">Add New Domain</h3>
        <form id="addDomainForm">
            <div class="form-control mb-4">
                <label class="label">
                    <span class="label-text">Domain Name</span>
                </label>
                <input type="text" id="newDomainName" name="newDomainName" class="input input-bordered">
            </div>
            <div class="modal-action">
                <button type="button" class="btn btn-primary" onclick="addDomain()">Add</button>
                <button type="button" class="btn" onclick="closeAddDomainModal()">Cancel</button>
            </div>
        </form>
    </div>
</div>

<div id="deleteDomainModal" class="modal">
    <div class="modal-box">
        <h3 class="font-bold text-lg">Confirm Deletion</h3>
        <p>Are you sure you want to delete this domain?</p>
        <div class="modal-action">
            <button type="button" class="btn btn-error" onclick="confirmDeleteDomain()">Delete</button>
            <button type="button" class="btn" onclick="closeDeleteDomainModal()">Cancel</button>
        </div>
    </div>
</div>