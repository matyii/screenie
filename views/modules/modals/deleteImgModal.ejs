<dialog id="deleteModal" class="modal modal-bottom sm:modal-middle">
    <div class="modal-box bg-base-200 text-base-content">
        <h3 class="font-bold text-lg" id="deleteModalLabel">Confirm Delete</h3>
        <p class="py-4">Are you sure you want to delete this image?</p>
        <div class="modal-action">
            <button class="btn" onclick="deleteModal.close()">Cancel</button>
            <button class="btn btn-error" id="confirmDeleteButton">Delete</button>
        </div>
    </div>
</dialog>